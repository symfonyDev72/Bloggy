{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block banner %}
	{% include "layouts/partials/_banner.html.twig" %}
{% endblock %}

{% block body %}

	<div class="row">

		<div class="col-lg-8 pe-lg-5 mb-lg-5 pb-lg-0 pb-3">
			<form class="row pb-lg-3">
				<div>
					<h2 class="mb-5 position-relative title_after">Formulaire de contact</h2>
				</div>
				<div class="col-lg-6 mb-3">
					<label for="lastName" class="form-label">Nom</label>
					<input type="text" class="form-control" id="lastName" placeholder="Nom...">
				</div>

				<div class="col-lg-6 mb-3">
					<label for="firstName" class="form-label">Prénom</label>
					<input type="text" class="form-control" id="firstName" placeholder="Prénom...">
				</div>

				<div class="col-12 mb-3">
					<label for="subject" class="form-label">Sujet</label>
					<input type="text" class="form-control" id="subject" placeholder="Sujet...">
				</div>

				<div class="col-12 mb-5">
					<label for="message" class="form-label">Message</label>
					<textarea name="" id="message" rows="10" placeholder="Votre message..." class="form-control"></textarea>
				</div>

				<div class="col-12">
					<button class="btn rounded-0 btn-grey px-3 py-2">Envoyer</button>
				</div>
			</form>
		</div>

		<div class="col-lg-4 my-lg-0 my-5">
			<div class="d-flex">
				<span class="me-3 h5">
					<i class="fa-solid fa-house text-orange fs-4"></i>
				</span>
				<div>
					<h5>California United States</h5>
					<p class="text-muted">Santa monica bullevard</p>
				</div>
			</div>
			<div class="d-flex my-3">
				<span class="me-3 h5">
					<i class="fa-solid fa-headphones text-orange fs-4"></i>
				</span>
				<div>
					<h5>00 (440) 9865 562</h5>
					<p class="text-muted">Mon to Fri 9am to 6pm</p>
				</div>
			</div>
			<div class="d-flex">
				<span class="me-3 h5">
					<i class="fa-solid fa-envelope text-orange fs-4"></i>
				</span>
				<div>
					<h5>support@colorlib.com</h5>
					<p class="text-muted">Send us your query anytime!</p>
				</div>
			</div>
		</div>

	</div>

	<div class="row">
		<div class="col-12 mb-lg-5">
			<h2 class="mb-5 position-relative title_after">Nous trouver</h2>

			<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3233.5970966981035!2d7.7447194!3d48.5885914!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4796c84f6ddec411%3A0x88f0903648759add!2s6%20Rue%20des%20Cigognes%2C%2067000%20Strasbourg!5e1!3m2!1sfr!2sfr!4v1662591263096!5m2!1sfr!2sfr" width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" class="w-100"></iframe>
		</div>
	</div>

{% endblock %}
