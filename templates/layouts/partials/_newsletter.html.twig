<div class="row border-bottom border-secondary pb-5">

	<div class="col-lg-3 col-md-6">
		<h5 class="text-white">Me suivre</h5>
		<p class="text-muted mb-lg-4 mb-3">Soyons sociables</p>
		<div class="d-flex">
			<div>
				<a class="text-decoration-none a_foot_i" href="#">
					<i class="fa-brands fa-github fs-5"></i>
				</a>
			</div>
			<div>
				<a class="text-decoration-none a_foot_i mx-3" href="#">
					<i class="fa-brands fa-twitter fs-5"></i>
				</a>
			</div>
			<div>
				<a class="text-decoration-none a_foot_i" href="#">
					<i class="fa-brands fa-square-facebook fs-5"></i>
				</a>
			</div>
		</div>
	</div>

	<div class="col-lg-4 col-md-5 my-md-0 my-5">
		<h5 class="text-white">Instagram</h5>
		<p class="text-muted mb-lg-4 mb-3">Meilleurs souvenirs</p>
		<div class="d-flex mb-3">
			{% for i in 1..4 %}
				<img src="{{ asset("build/img/insta/img#{i}.jpg") }}" class="img-fluid pe-3">
			{% endfor %}
		</div>
		<div class="d-flex">
			{% for i in 5..8 %}
				<img src="{{ asset("build/img/insta/img#{i}.jpg") }}" class="img-fluid pe-3">
			{% endfor %}
		</div>
	</div>

	<div class="col-lg-5 col-md-8 col-12 mx-auto pt-lg-0 pt-md-5 pt-0">
		<h5 class="text-white">Newsletter</h5>
		<p class="text-muted mb-lg-4 mb-3">Recevoir en avant-première toutes les exclusivités</p>
		<form class="row">
			<div class="col-12 d-flex">
				<input type="email" class="form-control w-90 rounded-0" id="email_news" placeholder="Adresse email">
				<button type="submit" class="submit_btn w-10 rounded-0 btn-grey-foot">
					<i class="fa-regular fa-paper-plane"></i>
				</button>
			</div>
		</form>
	</div>


	{# -- #}
</div>
